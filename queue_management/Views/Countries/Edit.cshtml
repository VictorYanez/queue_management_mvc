@using queue_management.Models
@model queue_management.Models.Country

@{
    ViewData["Title"] = Model.CountryId == 0 ? "Crear País" : "Editar País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ============================ Encabezado Principal ============================ -->
<div class="text-center">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>
<hr />
<!-- ============================ Definición de Card / Encabezado / Responsive ============================ -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-1">
            <!-- ============================ Encabezado Card ============================ -->
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-globe-americas"></i>
                    País a Editar Id.: @Model.CountryId - @Model.CountryName
                </h5>
            </div>
            <!-- Formulario de País -->
            <!-- ============================ Cuerpo Card ============================ -->
            <form asp-action="Edit" asp-controller="Countries" method="post" class="needs-validation" novalidate>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <!-- Llaves ocultas para editar -->
                        <input type="hidden" asp-for="CountryId" />
                        <input type="hidden" asp-for="RowVersion" />

                    <!-- Nombre del País -->
                    <div class="form-group mb-3">
                        <label asp-for="CountryName" class="form-label fw-bold"></label>
                        <input asp-for="CountryName" class="form-control" placeholder="Ingresa el nombre del país" />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>

                    <!-- Código Personalizado -->
                    <div class="form-group mb-3">
                        <label asp-for="CustomCode" class="form-label fw-bold"></label>
                        <input asp-for="CustomCode" class="form-control" placeholder="Código opcional (máx. 14 caracteres)" maxlength="14" />
                        <span asp-validation-for="CustomCode" class="text-danger"></span>
                    </div>

                    <!-- Estado de Visibilidad -->
                    <div class="form-group mb-3">
                        <label asp-for="VisibilityStatus" class="form-label fw-bold"></label>
                        <select asp-for="VisibilityStatus" asp-items="ViewBag.VisibilityStatusOptions" class="form-select" required>
                            <option value="">-- Seleccione un estado --</option>
                        </select>
                        <span asp-validation-for="VisibilityStatus" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Por favor seleccione un estado de visibilidad.
                        </div>
                    </div>

                    <!-- País por Defecto (Switch) -->
                    <div class="form-group mb-3">
                        <label asp-for="IsDefault" class="form-label fw-bold" for="IsDefaultSwitch"></label>
                        <div class="d-flex align-items-center ps-md-4 border-start ms-1">
                            <i class="bi bi-star text-primary me-3 fs-5"></i>
                            <div class="form-check form-switch mb-0 ms-3">
                                <input asp-for="IsDefault" class="form-check-input" type="checkbox" role="switch" id="IsDefaultSwitch" />
                            </div>
                            <small class="text-muted ms-1 fw-bold">¿Definir como país por defecto?</small>
                        </div>
                        <span asp-validation-for="IsDefault" class="text-danger"></span>
                    </div>

                    <!-- ============================ Botones de Acción ============================ -->
                    <div class="form-group">
                        <hr />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-floppy"></i> Aplicar
                        </button>
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="bi bi-x-square"></i> Cancelar
                        </a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

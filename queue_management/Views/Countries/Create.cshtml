@using queue_management.Models
@model queue_management.Models.Country

@{
    ViewData["Title"] = "Crear País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ============================ Encabezado Principal ============================ -->
<!-- Título -->
<div class="row justify-content-center mb-4">
    <div class="col-12 col-md-8 text-center">
        <h1 class="display-6">@ViewData["Title"]</h1>
    </div>
</div>
<!--  <hr /> = -->
<!-- ============================ Definición de Card / Encabezado / Responsive ============================ -->
<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div class="card border-0 shadow-sm">
            <!-- ============================ Encabezado Card ============================ -->
            <div class="card-header bg-primary text-white border-bottom">
                <h5 class="mb-0 fs-7"><i class="bi bi-globe-americas"></i>  Crear Nuevo País</h5>
            </div>
            <!-- Formulario de País -->
            <!-- ============================ Cuerpo Card ============================ -->
            <form asp-action="Create" asp-controller="Countries" method="post" class="needs-validation" novalidate>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="summaryError"></div>
                    <!-- Llaves ocultas para editar -->

                    <!-- Nombre del País -->
                    <div class="form-group col-12 col-md-6">
                        <label asp-for="CountryName" class="form-label fw-bold"></label>
                        <input asp-for="CountryName" class="form-control" id="CountryName" placeholder="Ingresa el nombre del país" />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(m => m.CountryName)
                        </div>
                    </div>

                    <!-- Código Personalizado -->
                    <div class="form-group mb-3">
                        <label asp-for="CustomCode" class="form-label fw-bold"></label>
                        <input asp-for="CustomCode" class="form-control" placeholder="Código opcional (máx. 14 caracteres)" maxlength="14" />
                        <span asp-validation-for="CustomCode" class="text-danger"></span>
                        <small class="text-muted">Este código debe ser único si se especifica</small>
                    </div>

                    <!-- Estado de Visibilidad -->
                    <div class="form-group mb-3">
                        <label asp-for="VisibilityStatus" class="form-label fw-bold"></label>
                        <select asp-for="VisibilityStatus" asp-items=@(ViewData["VisibilityStatusOptions"] as List<SelectListItem>) class="form-select" required>
                            <option value="">-- Seleccione un estado --</option>
                        </select>
                        <span asp-validation-for="VisibilityStatus" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Por favor seleccione un estado de visibilidad.
                        </div>
                    </div>

                    <!-- País por Defecto (Switch) -->
                    <fieldset class="mb-3 border-top pt-3">
                        <legend class="visually-hidden">Opciones</legend>
                        <div class="form-check form-switch">
                            <label asp-for="IsDefault" class="form-check-label" for="IsDefaultSwitch"></label>
                            <div class="d-flex align-items-center ps-md-4 border-start ms-1">
                                <i class="bi bi-star text-primary me-3 fs-5"></i>
                                <div class="form-check form-switch mb-0 ms-3">
                                    <input asp-for="IsDefault" class="form-check-input" type="checkbox" role="switch" id="IsDefaultSwitch" />
                                </div>
                                <small class="text-muted ms-1 fw-bold">¿Definir como país por defecto?</small>
                            </div>
                            <span asp-validation-for="IsDefault" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <!-- ============================ Botones de Acción ============================ -->
                    <div class="card-footer bg-light text-end">
                        <hr />
                        <button type="submit" class="btn btn-primary me-2"><i class="bi bi-floppy me-1"></i> Aplicar</button>
                        <a asp-action="Index" class="btn btn-secondary text-white"><i class="bi bi-x-square me-1"></i> Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
